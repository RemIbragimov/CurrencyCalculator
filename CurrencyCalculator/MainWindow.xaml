<Window x:Class="CurrencyCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurrencyCalculator"
        mc:Ignorable="d"
        Title="Currency Calculator" Height="250" Width="276">
    <Grid>
        <Label Content="От курса:" HorizontalAlignment="Left" Margin="23,28,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboBoxFrom" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="85,30,0,0"/>

        <Label Content="К курсу:" HorizontalAlignment="Left" Margin="30,68,0,0" VerticalAlignment="Top" Width="60"/>
        <ComboBox x:Name="comboBoxTo" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="85,70,0,0"/>

        <Label Content="Количество:" HorizontalAlignment="Left" Margin="8,106,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxAmount" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="85,110,0,0"/>

        <Button Content="Посчитать" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="85,150,0,0" Click="CalculateButton_Click"/>

        <Label x:Name="labelResult" Content="" HorizontalAlignment="Left" Margin="30,190,0,0" VerticalAlignment="Top" Width="250"/>
    </Grid>
</Window>
